---
import Layout from "@/Layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("flutter");
---


<Layout>
  <!-- <div class="pl-20"></div> -->
  <section class="flex flex-row-2">
    {posts.map((post)=>{
        return(
<div
    class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex gap-4 m-10">
    <div>
      <img
        class="w-20 h-20 p-1 rounded-full ring-2 ring-gray-300 dark:ring-gray-500"
        src={post.data.share.image}
        ,
        width={260}
        alt="Bordered avatar"
      />
    </div>

    <div>
      <a href={`/flutter/${post.slug}`}>
        <h5
          class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">
        {post.data.title}
        </h5>
      </a>
      <p class="mb-3 font-normal text-gray-500 dark:text-gray-400">
      {post.data.share.title}
      </p>
      <a
        href={`/flutter/${post.slug}`}
        class="inline-flex font-medium items-center text-blue-600 hover:underline">
        See our guideline
        <svg
          class="w-3 h-3 ms-2.5 rtl:rotate-[270deg]"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 18 18">
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"
          ></path>
        </svg>
      </a>
    </div>
  </div>
        );
    })}

    
  </section>
  <p class="grid place-content-center p-5 m-5 rounded-lg bg-blue-300 max-w-fit hover:underline">
          <a href="/">&larr; back to all posts</a>
        </p>
</Layout>
